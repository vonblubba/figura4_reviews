<h1>Modifica commento - <%= @comment.review.full_original_title %></h1>
<%= error_messages_for 'comment' %>
<%= form_tag({:action => 'update_comment', :id => @comment}, :multipart => true) %>
	<%= render(:partial => 'comment', :object => @comment) %>
    <%= submit_tag 'Salva' %>
</form>
<%= link_to 'Back', :action => 'list_comments', :id => @comment.review.id %>