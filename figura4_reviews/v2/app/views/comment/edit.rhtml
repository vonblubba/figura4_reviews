<h1>Modifica commento - <%= @comment.review.full_title %></h1>

<%= error_messages_for 'comment' %>

<%= form_tag({:action => 'update', :id => @comment}, :multipart => true) %>
	<%= render(:partial => 'comment', :object => @comment) %>
